<Page
    x:Class="EasyList.Proto.Views.AddStorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="using:EasyList.Proto.Converters"
    xmlns:controls="using:EasyList.Proto.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Page.Resources>
        <Converters:RetailerToLogoConverter x:Key="RetailerToLogoConverter" />
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton
                Command="{Binding AddUserStoreCommand}"
                Icon="Add"
                Label="Ajouter ce point de retrait" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:AdaptiveHeaderedContent Header="Ajouter un point de retrait">
            <Grid Margin="0,24,12,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <AutoSuggestBox
                    ItemsSource="{Binding SuggestionResults}"
                    PlaceholderText="Saisir la ville ou le code postal"
                    QueryIcon="Find"
                    QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                    SuggestionChosen="AutoSuggestBox_SuggestionChosen"
                    TextChanged="AutoSuggestBox_TextChanged">
                    <AutoSuggestBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding Retailer, Converter={StaticResource RetailerToLogoConverter}}" Stretch="Uniform" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="12,0"
                                    Text="{Binding Name}"
                                    TextWrapping="Wrap" />
                                <TextBlock Grid.Column="2" Text="{Binding ZipCode}" />
                                <TextBlock
                                    Grid.Column="3"
                                    Margin="12,0"
                                    Text="{Binding City}" />
                            </Grid>
                        </DataTemplate>
                    </AutoSuggestBox.ItemTemplate>
                </AutoSuggestBox>
                <GridView
                    Grid.Row="1"
                    Margin="0,12"
                    ItemsSource="{Binding SearchResults}"
                    SelectedItem="{Binding SelectedStore, Mode=TwoWay}">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="240" Height="180">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Image
                                    HorizontalAlignment="Left"
                                    Source="{Binding Retailer, Converter={StaticResource RetailerToLogoConverter}}"
                                    Stretch="Uniform" />
                                <TextBlock
                                    Grid.Row="1"
                                    MaxLines="2"
                                    Style="{ThemeResource TitleTextBlockStyle}"
                                    Text="{Binding Name}"
                                    TextWrapping="Wrap" />
                                <TextBlock Grid.Row="2" TextWrapping="Wrap">
                                    <Run Text="{Binding Address}" />
                                    <LineBreak />
                                    <Run Text="{Binding ZipCode}" />
                                    <Run Text="{Binding City}" />
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>
        </controls:AdaptiveHeaderedContent>
    </Grid>
</Page>
