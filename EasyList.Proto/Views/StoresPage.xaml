<Page
    x:Class="EasyList.Proto.Views.StoresPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:EasyList.Proto.Controls"
    xmlns:core="using:EasyList.Proto.Core.Retailers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EasyList.Proto.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton
                Command="{x:Bind ConcreteDataContext.NavigateToStoreCommand}"
                Icon="Map"
                Label="Localiser ce drive" />
            <AppBarButton
                Command="{x:Bind ConcreteDataContext.AddStoreCommand}"
                Icon="Add"
                Label="Ajouter un drive" />
            <AppBarButton
                Command="{x:Bind ConcreteDataContext.DeleteStoreCommand}"
                Icon="Delete"
                Label="Supprimer ce drive" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:AdaptiveHeaderedContent Header="Vos points de retrait">
            <Grid Margin="0,24">
                <ScrollViewer>
                    <GridView
                        Name="StoresGridView"
                        ItemsSource="{Binding UserStores}"
                        SelectedItem="{Binding SelectedStore, Mode=TwoWay}"
                        SelectionMode="Single">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="240" Height="180">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="60" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Image
                                        HorizontalAlignment="Left"
                                        Source="ms-appx:///Images/intermarche.png"
                                        Stretch="Uniform" />
                                    <TextBlock
                                        Grid.Row="1"
                                        MaxLines="2"
                                        Style="{ThemeResource TitleTextBlockStyle}"
                                        Text="{Binding Name}"
                                        TextWrapping="Wrap" />
                                    <TextBlock Grid.Row="2" TextWrapping="Wrap">
                                        <Run Text="{Binding Address}" />
                                        <LineBreak />
                                        <Run Text="{Binding ZipCode}" />
                                        <Run Text="{Binding City}" />
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </ScrollViewer>
            </Grid>
        </controls:AdaptiveHeaderedContent>
    </Grid>
</Page>
