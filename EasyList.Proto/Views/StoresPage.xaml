<Page
    x:Class="EasyList.Proto.Views.StoresPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="using:EasyList.Proto.Converters"
    xmlns:controls="using:EasyList.Proto.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Page.Resources>
        <Converters:RetailerToLogoConverter x:Key="RetailerToLogoConverter" />
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton
                Command="{Binding NavigateToStoreCommand}"
                Icon="Map"
                Label="Localiser ce drive" />
            <AppBarButton
                Command="{Binding AddStoreCommand}"
                Icon="Add"
                Label="Ajouter un drive" />
            <AppBarButton
                Command="{Binding DeleteStoreCommand}"
                Icon="Delete"
                Label="Supprimer ce drive" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:AdaptiveHeaderedContent Header="Vos points de retrait">
            <Grid Margin="0,24">
                <ListView
                    ItemsSource="{Binding UserStores}"
                    SelectedItem="{Binding SelectedStore, Mode=TwoWay}"
                    SelectionMode="Single">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Image
                                    Width="100"
                                    HorizontalAlignment="Left"
                                    Source="{Binding Retailer, Converter={StaticResource RetailerToLogoConverter}}"
                                    Stretch="Uniform" />
                                <TextBlock Grid.Row="1" Text="{Binding Name}" />
                                <TextBlock
                                    Grid.Row="2"
                                    Opacity="0.8"
                                    TextWrapping="Wrap">
                                    <Run Text="{Binding Address}" />
                                    <LineBreak />
                                    <Run Text="{Binding ZipCode}" />
                                    <Run Text="{Binding City}" />
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </controls:AdaptiveHeaderedContent>
    </Grid>
</Page>
