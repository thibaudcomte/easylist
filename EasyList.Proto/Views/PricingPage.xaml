<Page
    x:Class="EasyList.Proto.Views.PricingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:EasyList.Proto.Controls"
    xmlns:conv="using:EasyList.Proto.Converters"
    xmlns:core="using:EasyList.Proto.Core.Shopping"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:EasyList.Proto.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Page.Resources>
        <conv:IngredientToTextConverter x:Key="IngredientToTextConverter" />
    </Page.Resources>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton
                Command="{x:Bind ConcreteDataContext.GoToOnlineShoppingCartCommand}"
                Icon="Shop"
                Label="Passer commande" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <controls:AdaptiveHeaderedContent Header="Comparatif des prix">
            <GridView
                ItemsSource="{x:Bind ConcreteDataContext.PricedShoppingListList}"
                SelectedItem="{x:Bind ConcreteDataContext.SelectedPriceShoppingList, Mode=TwoWay}"
                SelectionMode="Single">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="core:PricedShoppingList">
                        <Grid Margin="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Image
                                HorizontalAlignment="Left"
                                Source="../Images/intermarche.png"
                                Stretch="Uniform" />
                            <ItemsControl Grid.Row="1" ItemsSource="{x:Bind PricedShoppingListItems}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="core:PricedShoppingListItem">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="40" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{x:Bind ShoppingListItem.Ingredient, Converter={StaticResource IngredientToTextConverter}}" TextTrimming="CharacterEllipsis" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Margin="12,0"
                                                VerticalAlignment="Center"
                                                Text="___">
                                                <TextBlock.Foreground>
                                                    <SolidColorBrush Color="{ThemeResource SystemListMediumColor}" />
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                            <TextBlock
                                                Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                Text="{x:Bind Price, Mode=OneWay}" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Grid.Row="2" Style="{ThemeResource SubtitleTextBlockStyle}">
                                <Run Text="Total" />
                                <Run Foreground="{ThemeResource AccentButtonBackground}" Text="{x:Bind Price, Mode=OneWay}" />
                                <Run Foreground="{ThemeResource AccentButtonBackground}" Text="Eur" />
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Margin" Value="12" />
                    </Style>
                </GridView.ItemContainerStyle>
            </GridView>
        </controls:AdaptiveHeaderedContent>
    </Grid>
</Page>
